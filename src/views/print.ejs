<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Relatorio</title>
    <style>
        div#containner {
            width: 100%;
            max-width: 760px;
            margin: 50px auto;

        }

        #containner h1 {
            color: black;
            text-align: center;
            font-size: 22px;
            margin-bottom: 32px;

        }

        table {
            width: 100%;
        }

        th {
            border: 1px solid #cecece;
            padding: 10px 8px;
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            text-transform: capitalize;
        }

        td {
            border : 1px solid #cecece;
            font-size: 12px;

        }

    </style>
</head>

<body>
    <div id="containner">


        <h1>RELATÓRIO DA PEÇA</h1>

        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Matéria Usada</th>
                    <th>Criado Por : </th>
                    <th>Id da Peça</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= pecas.name %> </td>

                    <% pecas.materia_reference.forEach(peca => { %>
                        <td style="display:grid; justify-items: center;    grid-template-columns: 1fr 1fr;" >
                            <span  style="display:grid; justify-items: flex-start;;    grid-template-columns: 1fr 1fr;" >
                               <span style="padding-right:8px;">Ref:</span>
                               <span><%= peca.reference %> </span>
                             </span>
                           <span>
                               <span  style="padding-right:8px;" >Qtd:</span>
                               <span><%= peca.quantity %> </span>
                           </span>
                            </td>
                    <% }) %>

                    <td><%= author %> </td>
                    <td><%= pecas.id %> </td>
                </tr>

            </tbody>

        </table>



    </div>
</body>

</html>
